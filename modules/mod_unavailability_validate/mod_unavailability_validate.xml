	<name>MOD_UNAVAILABILITY_VALIDATE</name>
	<creationDate>November 2016</creationDate>
	<author>Marcus Martinho</author>
	<authorEmail>marcus.martinho@tjam.jus.br</authorEmail>
	<authorUrl>http://www.facebook.com/marcus.martinho</authorUrl>
	<license>GNU GPL</license>
	<version>1.0.0</version>
	<description>MOD_UNAVAILABILITY_VALIDATE_DESC</description>
	<files>
		<filename 
			module="mod_unavailability_validate">
			mod_unavailability_validate.php
		</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>media</folder>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_unavailability_validate.ini</language>
		<language tag="en-GB">en-GB.mod_unavailability_validate.sys.ini</language>
		<language tag="pt-BR">pt-BR.mod_unavailability_validate.ini</language>
		<language tag="pt-BR">pt-BR.mod_unavailability_validate.sys.ini</language>
	</languages>	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field	
					name="show_type"
					type="list"
					label="MOD_UNAVAILABILITY_VALIDATE_FIELD_SHOW_OPTIONS_LABEL"
					description="MOD_UNAVAILABILITY_VALIDATE_FIELD_SHOW_OPTIONS_DESC"
					default="2">
					<option value="3">MOD_UNAVAILABILITY_VALIDATE_FIELD_SHOW_AS_PDF</option>
					<option value="2">MOD_UNAVAILABILITY_VALIDATE_FIELD_SHOW_AS_LINK</option>
					<option value="1">MOD_UNAVAILABILITY_VALIDATE_FIELD_SHOW_AS_PREVIEW</option>
					<option value="0">MOD_UNAVAILABILITY_VALIDATE_FIELD_SHOW_JUST_MSG</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="MOD_UNAVAILABILITY_VALIDATE_FIELD_MODULECLASS_SFX_LABEL"
					description="MOD_UNAVAILABILITY_VALIDATE_FIELD_MODULECLASS_SFX_DESC"/>
			</fieldset>
		</fields>
	</config>	
</extension>