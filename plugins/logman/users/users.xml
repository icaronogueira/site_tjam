<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.0" group="logman" method="upgrade" overwrite="true">
    <identifier>plg:logman.users</identifier>
    <name>plg_logman_users</name>
    <author>Joomlatools</author>
    <creationDate>December 2018</creationDate>
    <copyright>Copyright (C) 2011 Timble CVBA (http://www.timble.net)</copyright>
    <license>GNU GPLv3 - http://www.gnu.org/licenses/gpl.html</license>
    <authorEmail>support@joomlatools.com</authorEmail>
    <authorUrl>www.joomlatools.com</authorUrl>
    <version>4.2.2</version>
    <description>PLG_LOGMAN_USERS_DESC</description>

    <files>
        <filename plugin="users">users.php</filename>
        <folder>activity</folder>
        <folder>language</folder>
    </files>

    <config>
        <fields name="params" />
    </config>

    <resources>
        <resource name="user">
            <actions>
                <action>add</action>
                <action>edit</action>
                <action>delete</action>
                <action>login</action>
                <action>logout</action>
            </actions>
        </resource>
        <resource name="group">
            <actions>
                <action>add</action>
                <action>edit</action>
                <action>delete</action>
            </actions>
        </resource>
        <resource name="level">
            <actions>
                <action>add</action>
                <action>edit</action>
                <action>delete</action>
            </actions>
        </resource>
        <resource name="note">
            <actions>
                <action>add</action>
                <action>edit</action>
                <action>delete</action>
                <action>publish</action>
                <action>unpublish</action>
                <action>archive</action>
                <action>trash</action>
            </actions>
        </resource>
    </resources>
</extension>
