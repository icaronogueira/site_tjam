<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="system_definition">
		<field 
			name="id"
			type="text"
			class="readonly"
			default="0"
			label="COM_UNAVAILABILITY_FIELD_ID_LABEL"
			readonly="true"
			description="COM_UNAVAILABILITY_FIELD_ID_DESC"/>
		<field
			name="title"
			type="text"			
			class="inputbox"
			size="40"
			label="COM_UNAVAILABILITY_FIELD_TITLE_LABEL"
			description="COM_UNAVAILABILITY_FIELD_TITLE_DESC"/>
		<field
			name="catid"
			type="systemcategoryedit"
			label="JCATEGORY"
			description="COM_UNAVAILABILITY_FIELD_CATEGORY_DESC"
			extension="com_unavailability"
			required="true"
			default=""/>
		<field
			name="alias"
			type="text"
			class="inputbox"
			size="40"
			label="COM_UNAVAILABILITY_FIELD_ALIAS_LABEL"
			description="COM_UNAVAILABILITY_FIELD_ALIAS_DESC"/>
		<field 
			name="created_by" 
			type="user"
			label="COM_UNAVAILABILITY_FIELD_CREATED_BY_LABEL" 
			description="COM_UNAVAILABILITY_FIELD_CREATED_BY_DESC" />	
		<field
			name="url"
			type="url"
			class="inputbox"
			filter="url"
			validate="url"
			size="255"
			label="COM_UNAVAILABILITY_FIELD_URL_LABEL"
			description="COM_UNAVAILABILITY_FIELD_URL_DESC"/>
		<field 
			name="state"
			type="list"
			class="inputbox small"
			size="1"
			default="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field
			name="descricao"
			type="editor"
			buttons="true"
			hide="pagebreak,readmore"
			filter="JComponentHelper::filterText"
			class="inputbox"
			label="COM_UNAVAILABILITY_FIELD_DESCRICAO_LABEL"
			description="COM_UNAVAILABILITY_FIELD_DESCRICAO_DESC"/>								
	</fieldset>
</form>